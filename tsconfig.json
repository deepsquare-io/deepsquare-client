{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["*.spec.ts"]
}
